## TEMPLATES
template0 ${offset 20}
template1 ${offset 5}
template2 ${voffset -3}
template3 ${voffset -4}

TEXT
${if_existing /sys/class/power_supply/BAT0/status}${if_match ${battery_percent BAT0}<99}
	${if_existing /sys/class/power_supply/BAT0/status Discharging}
		${font Ubuntu:bold:size=8}${color1}battery discharging ${template1}${color0}${battery_percent BAT0}%${if_empty ${battery_time BAT0}}${else}${template0}${color1}time left ${template1}${color0}${battery_time BAT0}${endif}
	${else}
		${font Ubuntu:bold:size=8}${color1}battery charging ${template1}${color0}${battery_percent BAT0}%
	${endif}
${else}

	${font Ubuntu:bold:size=14}${template2}${color4}! ${template3}${font Ubuntu:bold:size=8}${color0}battery fully charged
${endif}
${else}
	
	${font Ubuntu:bold:size=14}${template2}${color3}! ${template3}${font Ubuntu:bold:size=8}${color0}no battery present
${endif}

